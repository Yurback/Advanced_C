  "version": "2.0.0",
  "tasks": [
    {
      "label": "My programm",
      "type": "shell",
      "command": "gcc",
      "args": [
        "-g",
        "${workspaceFolder}/src/*.c",
        "-o",
        "${workspaceFolder}/programm"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
